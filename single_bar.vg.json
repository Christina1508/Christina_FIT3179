{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "300",
  "config": {
    "padding": {"right": 10},
    "view": {"stroke": "transparent"}    
  },
  "data": {"url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/data/categorical_arrivals.csv"},
  "params": [
    {
      "name": "Year_Select",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
    
  ],

  "transform": [ 
    {"filter": "datum.Year == Year_Select"}
    
  ], 


  "height": {"step": 50},

  "encoding": {
    "y": {
      "field": "Category",
      "type": "nominal",
      "sort": "-x",
      "title": null,
      "axis": {
        "ticks": false, 
        "grid": false,
        "labelAlign": "left",
        "labelBaseline": "top",
        "labelOffset": 20,
        "domain": false
      }
    },
    "x": {
      "field": "Arrivals",
      "type": "quantitative",
      "title": null,
      "axis": {
        "grid": false,
        "ticks": false, 
        "labels": false,
        "domain": false
      }
    },

    "fill": {
      "field": "Category",
      "type":"nominal",
      "scale": {
        "range": ["#2b7aab", "#6a5190 ", "#cc3361"]
      }, 
      "legend": null
    },    

    "tooltip": [
      {"field": "Arrivals"}
    ]
  },


  "layer": [
    {"mark": 
      {
        "type": "bar", 
        "yOffset": 5, 
        "cornerRadiusEnd": 20, 
        "height": {"band": 0.5}
      }
    },

    {
      "mark": {
        "type": "text", 
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": 5
      },
      "encoding": {
        "text": { 
          "field": "Arrivals", 
          "type":"quantitative", 
          "format": "," 
        }
      }
    }  
  ]
}
