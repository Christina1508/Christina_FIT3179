{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,

  "config": {
    "padding": {"right": 40},
    "view": {"stroke": "transparent"}
  },
  "data": {"url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/data/categorical_arrivals.csv"},
  "params": [
    {
      "name": "Year_Select",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
    
  ],

  "transform": [ 
    {"filter": "datum.Year == Year_Select"}
    
  ], 


  "height": {"step": 50},

  "encoding": {
    "y": {
      "field": "Category",
      "type": "nominal",
      "sort": "-x",
      "title": null,
      "axis": {
        "ticks": false, 
        "grid": false,
        "labelAlign": "left",
        "labelBaseline": "middle",
        "labelPadding": -5,
        "labelOffset": -15,
        "titleX": 5,
        "titleY": -5,
        "titleAngle": 0,
        "titleAlign": "left",
        "domain": false
      }
    },
    "x": {
      "field": "Arrivals",
      "type": "quantitative",
      "title": null,
      "axis": {
        "grid": false,
        "ticks": false, 
        "labels": false,
        "domain": false
      }
    }, 

    "tooltip": [
      {"field": "Arrivals"}
    ]
  },


  "layer": [
    {"mark": 
      {"type": "bar", "yOffset": 5, "cornerRadiusEnd": 10, "height": {"band": 0.5}}
    },

    {
      "mark": {
        "type": "text", 
        "align": "left",
        "baseline": "middle",
        "dx": 3
      },
      "encoding": {
        "text": { 
          "field": "Arrivals", 
          "type":"quantitative",
          "format": "," 
        }
      }
    }  
  ]
}
