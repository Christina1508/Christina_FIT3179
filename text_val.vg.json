{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "config": {
    "view": {"stroke": "transparent"},
    "padding": {"bottom": 35, "right": 20, "top": -25},
    "background": "#e4ede8"
  },
  "data": {"url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/data/arrivals_departures_by_state.csv"},
  "params": [
    {
      "name": "Year_Select",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [ 
    {"filter": "datum.State == 'AUS'"},
    {"filter": "datum.Year == Year_Select"}
  ], 

  "layer": [
    {
      "mark": "text",
      "encoding": {
        "text": {"field": "Arrival", "type": "quantitative", "format":","},
        "color": {"value": "black"},  
        "x": {"value": 50}, 
        "y": {"value": 50}  
      }
    },
    {
      "mark": "text",
      "encoding": {
        "text": {"field": "Departures", "type": "quantitative","format":","},
        "color": {"value": "black"},  
        "x": {"value": 200}, 
        "y": {"value": 50}  
      }
    }
  ]

}