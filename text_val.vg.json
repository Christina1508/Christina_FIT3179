{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "data": {"url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/data/arrivals_departures_by_state.csv"},
  "params": [
    {
      "name": "Year_Select",
      "bind": {
        "input": "select",
        "options":  ["2021", "2020", "2019", "2018", "2017", "2016", "2015", "2014", "2013", "2012", "2011", "2010", "2009", "2008", "2007", "2006"],
        "name": "Select Year:"
      }
    }
  ],
  "transform": [ 
    {"filter": "datum.State === 'AUS'"},
    {"filter": "datum.Year === '2021' || datum.Year === Year_Select"}, 
    {"filter": "Year_Select == null  || datum.Year === Year_Select"}
  ], 

  "layer": [
    {
      "mark": "text",
      "encoding": {
        "text": {"field": "Arrival", "type": "quantitative"},
        "color": {"value": "black"},  
        "x": {"value": 100}, 
        "y": {"value": 50}  
      }
    },
    {
      "mark": "text",
      "encoding": {
        "text": {"field": "Departures", "type": "quantitative"},
        "color": {"value": "black"},  
        "x": {"value": 200}, 
        "y": {"value": 50}  
      }
    }
  ]

}