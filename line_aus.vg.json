{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/data/arrivals_departures_by_state.csv"},
  "title": "Number of International Tourists in Australia",
  "width": "700",
  "height": "700",
  "config": {
    "view": {"stroke": "transparent"}
  },
  "transform": [
    {"filter": "datum.State == 'AUS'"}
  ],
  "vconcat": [
    {
      "layer": [

        {
          "mark": {
            "type":"line", 
            "point": "transparent", 
            "color": "#fcba03"},
          "encoding": {
            "x": {
              "field":"Year", 
              "type": "quantitative", 
              "axis": {"labels": false, "ticks": false, "title": null}}, 
            "y": {
              "field": "Arrival", 
              "type": "quantitative", 
              "scale": {"domain": [0, 28000000]}},

            "tooltip": [
              {"field": "Arrival", "type": "ordinal", "format": ","},
              {"field": "Year", "type": "quantitative"}
            ]
          }
        },


        {
          "mark": 
            {
              "type": "text", "align": "center","dy": -5, "baseline": "bottom"
            },

          "encoding": 
            {
              "text": {"field": "Arrival", "aggregate": "max", "type": "quantitative", "format": ","},

              "y": {"aggregate": "max", "field": "Arrival", "type": "quantitative", "title":"Arrivals"},

              "x": {"aggregate": {"argmax": "Arrival"}, "field": "Year", "type": "quantitative"},

              "color": {"value": "black"}
            }
        }

      ]
    },

    {
      "layer": [
        {
          "mark": {"type":"line", "point": "transparent", "color": "#008080"},
          "encoding": {
            "x": {"field":"Year", "type": "quantitative", 
              "axis": {"format": "d"}},
            "y": {
              "field": "Departures", 
              "type": "quantitative", 
              "title":"Departures",
              "scale": {"domain": [0, 28000000]}}, 


            "tooltip": [
              {"field": "Departures", "type": "ordinal", "format": ","},
              {"field": "Year", "type": "quantitative"}
            ]
          }
        },
         
        {
          "mark": 
            {
              "type": "text", "align": "center","dy": -5, "baseline": "bottom"
            },

          "encoding": 
            {
              "text": {"field": "Departures", "aggregate": "max", "type": "quantitative", "format": ","},

              "y": {"aggregate": "max", "field": "Departures", "type": "quantitative"},

              "x": {"aggregate": {"argmax": "Departures"}, "field": "Year", "type": "quantitative", "title":"Year"},

              "color": {"value": "black"}
            }
        }

      ]
    }
    
  ]
}
