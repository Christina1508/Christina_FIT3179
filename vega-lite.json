{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Unemployment in America",
  "projection": {"type": "equirectangular"},
  "layer": [
    //Countries
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/json_map.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "darkgray"
      }
    },

    //States
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/json_map.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/USA%20Unemployment%20Rate%20Data.csv"
            },
            "key": "State",
            "fields": ["PercentageUnemployed"]
          }
        },
        {
          "calculate": "datum.PercentageUnemployed",
          "as": "Rate_Percentage_Unemployed"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "geoshape",
            "stroke": "black"
          },
          "encoding": {
            "color": {
              "field": "Rate_Percentage_Unemployed",
              "type": "quantitative",
              "scale": {
                "type": "linear",
                "scheme": "purpleblue",
                "domain": [0, 1, 2, 3, 4, 5, 7]
              },
              "title": "% of Unemployed Population"
            },
            "tooltip": [
              {
                "field": "properties.name",
                "type": "nominal",
                "title": "State"
              },
              {
                "field": "Rate_Percentage_Unemployed",
                "type": "quantitative",
                "title": "Percentage Unemployed"
              }
            ]
          }
        }
      ]
    },

    //Graticules
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/json_map.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
      },
      "mark": {"type": "geoshape", "fill": "clear", "strokeOpacity": 0.3, "stroke": "lightslategray"}
    }
  ]
}