{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Tourism in 2022",
  "projection": {"type": "equirectangular"},
  "layer": [

      {
      "data": {
        "url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [ 
        {  
          "lookup": "properties.BRK_NAME",
          "from": {
            "data": {"url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/arrivals-personal-business.csv"},
            "key": "Country",
            "fields": ["nTotal", "Total"]
            
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "nTotal",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "scheme": "lightmulti",
            "domain": [0,0.001, 0.008, 0.01, 0.08, 0.1]
          }
        },
        "tooltip": [
          {
            "field":"properties.BRK_NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Total",
            "type": "quantitative",
            "title": "No Tourists"
          },
          {
            "field": "nTotal",
            "type": "quantitative"
          }
        ]
      }

    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_15"}
      },
      "mark": {"type": "geoshape", "fill": "clear", "strokeOpacity": 0.3, "stroke": "lightslategray"}
    },

      {
      "data": {
        "url": "https://raw.githubusercontent.com/Christina1508/Christina_FIT3179/main/mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "clear", "stroke": "black"}
    }

  ]
}
