{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Tourism in 2022",
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },

      "transform": [
        {
          "lookup": "properties.name", 
          "from": {
            "data": {"url": "arrivals_departures_by_state.csv"},
            "key": "State",
            "fields": ["Arrivals", "Total"]
          }
        }
      ],

      "mark": {"type": "geoshape", "stroke": "lightslategray"},
      "encoding": {
        "color": {
          "field": "Arrivals",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "scheme": "lightgreyteal",
            "domain": [0, 0.003, 0.04, 0.01, 0.1, 0.2, 0.4, 0.3, 0.5]
          }
        },
        "tooltip": [
          {
            "field":"properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field":"Total",
            "type": "quantitative",
            "title": "No. Tourists"
          },
          {
            "field": "Arrivals",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "data": {
        "url": "mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_5"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "darkslategray",
        "strokeOpacity": "0.3",
      }
  ]
}
