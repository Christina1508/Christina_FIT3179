{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Tourism in 2021 in Australia",
  "projection": {"type": "equirectangular"},
   "params": [
      {
        "name": "Type_Select",
        "value": "Ar_norm",
        "bind": {
          "input": "select",
          "options": ["Ar_norm", "Dep_norm"],
          "labels": ["Arriving", "Departing"],
          "name": "Type: "
        }
      }, 
      {
        "name": "Year_Select",
        "value": 2021,
        "bind": {
          "input": "range",
          "min": 2006,
          "max": 2021,
          "step": 1,
          "name": "Year: "
        }
      }
    ],

  "layer": [

    {
      "data": {
        "url": "data/wide_arrivals_departures_by_state.csv"
      }, 

      "transform": [
        {
          "lookup": "State",
          "from": {
            "data": 
              {
                "url": "mapshaper.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "ne_10m_admin_1_states_provinces"
                }
              }, 
              "key": "properties.gns_name"
          },
          "as": "geo"
        }, 
        {"calculate": "datum[Year_Select]", "as": "arriving"},
        {"filter": "datum.Type === Type_Select"}
      ], 

      "mark": {"type": "geoshape", "stroke": "lightslategray"},

      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "arriving",
          "type": "quantitative", 
          "scale": {
            "scheme": "lightgreyteal",
            "domain": [0, 0.003, 0.04, 0.01, 0.1, 0.2, 0.4, 0.3, 0.5]
          }
        }, 
        "tooltip": [
          {"field": "arriving", "type": "quantitative"},
          {"field": "Type", "type": "nominal"}
        ]
      }
    },

 


    {
      "data": {
        "url": "mapshaper.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_5"}
      }, 

      "mark": {"type": "geoshape", "stroke": "darkslategray",  "strokeOpacity": 0.3}
    }
      
  ]
}