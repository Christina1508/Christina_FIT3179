{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "data": {"url": "data/expenditure_by_state.csv"},
  "params": [
    {
      "name": "Year_Select",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [ 
    {"filter": "datum.State != 'AUS'"},
    {"filter": "datum.Year == Year_Select"}
  ], 

  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {"field": "State", "type": "nominal", "title": "State"},
        "y": {"field": "Expend_Mil", "type": "quantitative", "title": "$ million"},
        "color": {"value": "slategray"},
        "tooltip": [{"field": "Expend_Mil", "type": "quantitative", "title": "Million $", "format":","}]
      }
    }
  ]

}
